<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdpcrew.android.flatapp">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FlatAppCustomTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".ShoppingList.ShoppingListsActivity">
            android:configChanges="orientation|keyboard"</activity>
        <activity android:name=".ShoppingList.SingleListActivity">
            android:configChanges="orientation|keyboard"</activity>

        <activity android:name=".TasksManager.TaskManagerActivity"
                  android:parentActivityName=".MainActivity"
                  android:theme="@style/FlatAppTaskManager">
              </activity>
        <activity android:name=".Calender.CalendarMain"></activity>
        <activity android:name=".Calender.CalenderEventHandler"></activity>
        <activity android:name=".BillsManager.BillListActivity"></activity>
        <activity android:name=".BillsManager.BillActivity"></activity>
    </application>


</manifest>